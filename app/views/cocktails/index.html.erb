<div class="d-flex w-100 justify-content-center">
  <div class="card border-0" style="width: 90%;">
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <% if cocktail.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key %>)">
            <%= link_to " " , cocktail_path(cocktail), class: 'card-link' %>
            <%= cocktail.name %>
          </div>
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
            <%= link_to " " , cocktail_path(cocktail), class: 'card-link' %>
            <%= cocktail.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>